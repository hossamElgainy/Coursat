@model RegisterModel
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Sign Up</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div id="alert_placeholder_register"></div>
            <form id="UserRegistrationForm" name="UserRegistrationForm" method="POST" asp-controller="UserAuth" asp-action="RegisterUser">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input type="hidden" asp-for="RegistrationInValid" />
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="confirm password" />
                    <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" placeholder="First Name" />
                    <label asp-for="FirstName" class="form-label">FirstName</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" placeholder="Last Name" />
                    <label asp-for="LastName" class="form-label">LastName</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Address1" class="form-control" autocomplete="username" aria-required="true" placeholder="Address 1" />
                    <label asp-for="Address1" class="form-label">Address1</label>
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Address2" class="form-control" autocomplete="username" aria-required="true" placeholder="Address 2" />
                    <label asp-for="Address2" class="form-label">Address2</label>
                    <span asp-validation-for="Address2" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PostCode" class="form-control" autocomplete="username" aria-required="true" placeholder="Post Code" />
                    <label asp-for="PostCode" class="form-label">PostCode</label>
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="Phone Number" />
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <input class="form-check-input" asp-for="AcceptUserAgreement" />
                    <label asp-for="AcceptUserAgreement" class="form-check-label">
                        I Accept The<a href="#">Terms Of Use</a> And<a href="#">Privacy</a>
                    </label>
                </div>
                <div>
                    <button id="login-submit" name="register" type="submit" class="w-100 btn btn-lg btn-primary">Sign Up</button>
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>
