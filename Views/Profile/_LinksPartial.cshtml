@model Coursat.Models.UserLinks

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Links</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id="UserLinkForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3 row">
                    <label asp-for="Website" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Website" type="text" class="form-control" >
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="LinkedIn" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="LinkedIn" type="text" class="form-control" >
                        <span asp-validation-for="LinkedIn" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="StackoverFlow" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="StackoverFlow" type="text" class="form-control" >
                        <span asp-validation-for="StackoverFlow" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Github" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Github" type="text" class="form-control">
                        <span asp-validation-for="Github" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Facebook" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Facebook" type="text" class="form-control" >
                        <span asp-validation-for="Facebook" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="Twitter" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Twitter" type="text" class="form-control" >
                        <span asp-validation-for="Twitter" class="text-danger"></span>
                    </div>
                </div>

            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" name="save" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_validationscriptspartial">
}
